<div class="m-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-6">
      <div class="card-signup">
        <div class="row justify-content-center">
          <h2>Sign up</h2>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "first_name" }%>
            <%= f.input :last_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "last_name" }%>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          <div class="row justify-content-center pt-2">
            <h2>Your Profile</h2>
          </div>
            <%= f.input :username,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "username" }%>
            <%= f.input :birth_date,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "birthdate" }%>
            <%= f.input :country,
                        collection: User::COUNTRIES,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "country" }%>
            <%= f.label :language_id, "Your native language" %>
            <%= f.select :language_id, Language.order('name ASC').map { |l| [l.name, l.id] } %>
            <%= f.input :about_me,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "username" },
                        label: "Tell us a little about you:" %>
          </div>

          <div class="form-actions">
            <div class="row justify-content-center m-5">
              <%= f.button :submit, "Sign up", :class => 'btn btn-secondary w-75' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

