<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div>
    <div class="bubble-blue">
      <%= image_tag "hermes_land.png",  class: "logo-img"%>
    </div>
    <%= link_to "Hermes Land", "/", class: "logo" %>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to "Home", "/", class: "nav-link" if current_user.avatar.photo.attached? %>
      </li>
      <li class="nav-item">
        <%= link_to "Messages", chat_rooms_path, class: "nav-link" if current_user.avatar.photo.attached? %>
      </li>
    </ul>
