<div class="m-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-6">
      <div class="card-signup">
        <div class="container row pt-3" style="background-color: white">
          <h1>This is <%= @user.first_name %>'s profile</h1>
          <div class="container row pt-2">
            <p><strong>Country: </strong><%= @user.country %></p>
          </div>   
          <div class="container row pt-2">
            <p><strong>Native Language: </strong><%= @user.native_language %></p>
          </div>                  
          <div class="container row pt-2">
          <p><strong>About me: </strong><%= @user.about_me %></p>
          </div>
          <div class="container row pt-2">
            <p><strong>Interests: </strong><% @user.interests.each do |interest| %></p>
              <ul>
                <li><%= interest.name %></li>
              </ul>
            <% end %>
          </div>
          <div class="container row pt-2 justify-content-center">
            <%= link_to "Chat with #{@user.first_name}", chat_rooms_path, class: "btn btn-flat w-75" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
