<div class="m-4">
  <div class="row justify-content-center">

    <div class="card-signup profile-size pos-relative">

      <div class="profile-filler"></div>
      <div class="profile-content">
        <div class="profile-path">
          <span><%= link_to "Home", root_path %></span><span id="path-arrow">></span> <span><%= @user.username %>'s profile</span>
        </div>
        <div class="profile-pic">
          <div class="profile-img-container">
            <div class="canvas-img-box">
              <!-- greek circle -->
              <%= cl_image_tag @user.avatar.photo.key, class: "background-image" if @user.avatar.photo.attached? %>
              <div class="profile-name topos-8">
                <span>
                  <%= @user.username %>
                </span>
              </div>
            </div>
          </div>
        </div>
        <div class="profile-btns">
          <div class="btn-chatwith">
            <%= link_to image_tag('newchat.png'), chat_rooms_path(chat_room:{user_ids: [@user.id]}), method: :post %>
            <%= link_to "Start a chat", chat_rooms_path(chat_room:{user_ids: [@user.id]}), method: :post %>
          </div>
        </div>
        <div class="profile-info">
          <div class="profile-about">
            <div class="profile-right">
              <%= image_tag 'information.png', class: "profile-icon"%>
              <strong style="margin-top: 0.3em; margin-left: 1.3em;">About me</strong>
            </div>
            <div class="profile-left">
              <%= @user.about_me %>
            </div>
          </div>
          <div class="profile-about">
            <div class="profile-right">
              <%= image_tag 'country.png', class: "profile-icon"%>
              <strong style="margin-top: 0.5em; margin-left: 1.3em;">Country</strong>
            </div>
            <div class="profile-left">
              <%= @user.country %>
            </div>
          </div>
          <div class="profile-about">
            <div class="profile-right">
              <%= image_tag 'linguistics2.png', class: "profile-icon"%>
              <strong style="margin-top: 0.5em; margin-left: 1.3em;">Languages</strong>
            </div>
            <div class="profile-left">
              <div class="tag-wrapper">
                <div class="tag"><%= @user.native_language %></div>
                <% @user.my_languages&.each do |language| %>
                <!-- <p class="profile-languages"><%= language.language.name %>: <%= language.level %></p> -->
                  <div class="tag">
                    <%= language.language.name %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="profile-about">
            <div class="profile-right">
              <%= image_tag 'interests.png', class: "profile-icon"%>
              <strong style="margin-top: 0.5em; margin-left: 1.3em;">Interests</strong>
            </div>
            <div class="profile-left">
              <div class="tag-wrapper">
                <% @user.interests&.each do |interest| %>
                  <div class="tag">
                    <%= interest.name %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  </div>
</div>
