<div class="m-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-6">
      <div class="card-signup">
        <div class="container row pt-3" style="background-color: white">
          <h2>This is <%= @user.first_name%> <%= @user.last_name %>'s profile</h2>
          <div> <p>Country: <%= @user.country %></p></div>  
          <div class="container row pt-2">
            <%= @user.about_me %>
            <div> <p>Native Language: <%= @user.native_language %></p></div>           
          </div>
          <div class="container row pt-2">
            <% @user.interests.each do |interest| %>
              <ul>
                <li><%= interest.name %></li>
              </ul>
            <% end %>
          </div>
          <div class="container row pt-2 justify-content-center">
            <%= link_to "Chat with #{@user.first_name}", chat_rooms_path, class: "btn btn-flat w-75" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
