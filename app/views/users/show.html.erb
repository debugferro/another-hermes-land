<div class="m-4">
  <div class="row justify-content-center">

    <div class="card-signup profile-size">

      <div class="profile-content">
        <div>
          <h1><%= @user.username %></h1>
        </div>

        <div class="profile-about">
          <div class="profile-right">
            <%= image_tag 'information.png', class: "profile-icon"%>
            <strong style="margin-top: 0.3em;">About me</strong>
          </div>
          <div class="profile-left">
            <%= @user.about_me %>
          </div>
        </div>
          <hr>
          <div class="profile-about">
          <div class="profile-right">
            <%= image_tag 'country.png', class: "profile-icon"%>
            <strong style="margin-top: 0.5em;">Country</strong>
          </div>
          <div class="profile-left">
            <%= @user.country %>
          </div>
        </div>
          <hr>
          <div class="profile-about">
          <div class="profile-right">
            <%= image_tag 'interests.png', class: "profile-icon"%>
            <strong style="margin-top: 0.5em;">Interests</strong>
          </div>
          <div class="profile-left">
            <div class="tag-wrapper">
              <% @user.interests&.each do |interest| %>
                <div class="tag">
                  <%= interest.name %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>


  </div>
</div>













