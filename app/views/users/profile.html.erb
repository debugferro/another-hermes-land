
<div class="container">
  <div class="card-signup text-center">
    <div class="row justify-content-center p-3">
     <h1 id="find-title">Add the languages you want to speak!</h1>
    </div>
    <div class="row justify-content-center">
      <ul>
        <% @my_languages.each do |my_language| %>
        <li class="select2-selection__choice" style="list-style: none;">
        <%= my_language.language.name %>
        <%= link_to 'X', my_language_path(my_language), method: :delete %>
        <% end %>
        </li>
      </ul>
    </div>
      <%= simple_form_for current_user, url: my_languages_path, method: 'post' do |f| %>
    <div class="p-1">
      <p>Languages:</p>
      <%= f.association :languages, label: false, value_method: :name, label_method: :name, input_html: { class: 'select2max form-large' }  %>
    </div>
      <%= f.submit "Save" %>
      <% end %>
  </div>
</div>

