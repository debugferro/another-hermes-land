<% wrapper = message_class("message-wrapper", message, current_user) %>
<% photo = message_class("message-photo", message, current_user) %>
<% bubble = message_class("speech-bubble", message, current_user) %>
  <div class="message-container <%= wrapper %>" id="message-<%= message.id %>" data-user-id="<%= message.user_id %>">
    <% if current_user.id == message.user_id %>
      <div class="<%= bubble %> bubble">
        <p><%= message.content %></p>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </div>
      <div class="<%= photo %> photo">
        <div>
          <%= cl_image_tag message.user.photo.key if message.user.photo.attached? %>
        </div>
      </div>
    <% else %>
      <div class="<%= photo %> photo">
        <div>
          <%= cl_image_tag message.user.photo.key if message.user.photo.attached? %>
        </div>
      </div>
      <div class="<%= bubble %> bubble">
        <p><%= message.content %></p>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </div>
    <% end %>
  </div>
